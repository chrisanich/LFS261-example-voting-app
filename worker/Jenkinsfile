pipeline {
    agent {
        docker {
            image 'maven:3.9.8-sapmachine-21'  // Using a Docker image with Maven for the worker app
            args '-v $HOME/.m2:/root/.m2'     // Mounting the Maven repository from host to container
        }
    }
    stages {
        stage('build') {
            steps {
                echo 'building worker app'
                dir('worker') {
                    sh 'mvn compile'   // Compiling the Maven project inside the Docker container
                }
            }
        }
        stage('test') {
            steps {
                echo 'running unit tests'
                dir('worker') {
                    sh 'mvn clean test'  // Running tests inside Docker
                }
            }
        }
        stage('package') {
            steps {
                echo 'packaging worker app into a jar file'
                dir('worker') {
                    sh 'mvn package -DskipTests'   // Packaging the project
                    archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
                }
            }
        }
    }
    post {
        always {
            echo 'Job is complete'  // Final message after the pipeline finishes
        }
    }
}

