pipeline {
    agent any

    tools {
        git 'Default'  // Name must match the Git installation name in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // Your other stages (e.g., Build, Test, Docker Build & Push)
    }

    post {
        always {
            echo 'Pipeline execution complete.'
        }
    }
}
