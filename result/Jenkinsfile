pipeline {
    agent none  // No default agent for the entire pipeline

    stages {
        stage('build') {
            when {
                changeset "**/result/**"
            }
            agent {
                docker {
                    image 'node:18-slim'  // Node.js image for the result application
                    args '-v $HOME/.m2:/root/.m2'
                }
            }
            steps {
                echo 'Building result application...'
                dir('result') {
                    sh 'npm install'
                }
            }
        }

        stage('test') {
            when {
                changeset "**/result/**"
            }
            agent {
                docker {
                    image 'node:18-slim'
                    args '-v $HOME/.m2:/root/.m2'
                }
            }
            steps {
                echo 'Running tests on result application...'
                dir('result') {
                    sh 'npm test'
                }
            }
        }

        stage('docker-package') {
            agent any
            when {
                changeset "**/result/**"
                branch 'master'
            }
            steps {
                echo 'Building Docker image for result application...'
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerlogin') {
                        def resultImage = docker.build("chrisanich/result:v${env.BUILD_ID}", "./result")
                        resultImage.push()
                        resultImage.push("latest")
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Build and Docker packaging for result application is complete.'
        }
    }
}
